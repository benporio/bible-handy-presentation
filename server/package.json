{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run --prefix ../client/ build && npm run build:prod && node dist/index.js",
    "start-local": "npm run --prefix ../client/ buildLocal && npm run build:prod && node -r dotenv/config dist/index.js dotenv_config_path=./env/.env-prod",
    "build:prod": "npx tsc && webpack --config webpack.prod.config.ts --mode production",
    "build:dev": "npx tsc && webpack --config webpack.dev.config.ts --mode development",
    "test": "jest --verbose --detectOpenHandles",
    "clientDev": "npm start --prefix ../client/",
    "dev": "npm run build:dev && concurrently \"npx tsc --watch\" \"nodemon -q -r dotenv/config dist/index.js dotenv_config_path=./env/.env-dev\"",
    "fullDev": "npm run build:dev && concurrently \"npm run clientDev\" \"npx tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
