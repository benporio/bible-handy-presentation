    "dotenv": "^16.4.1",
    "express": "^4.21.2",
    "express-session": "^1.18.0",
    "jsdom": "^26.0.0",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^24.0.2",
    "morgan": "^1.10.0",
